{
    "extends": "./node_modules/@alfabank/alfapeople-arui-scripts-presets/tsconfig/tsconfig.ui.json",
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": ".",
        "noErrorTruncation": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "postCssOptions": {
                        "useConfig": true
                    }
                }
            }
        ]
    },
    "include": ["**/*"]
}
