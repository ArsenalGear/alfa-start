{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ESNext", //es6
    "target": "es5", //es6
    "jsx": "react",
//    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "Node",
//    "baseUrl": "src", //src
    "baseUrl": ".", //src
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true, //правильно обрабатывать импорты
    "allowSyntheticDefaultImports": true, //правильно обрабатывать импорты дефолтного импорта библиотек не указывать * as 33:29
    "isolatedModules": true,
    //    "noUnusedLocals": true,
    "sourceMap": true,
    "typeRoots": [
      "src/customTypings",
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    //    "noEmit": true,
    "outDir": "dist"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./src/**/*Slice*"
  ],
  "ts-node": { //для импортов
    "compilerOptions": {
      "module": "CommonJS" //теперь можно использовать "module": "ESNext"
    }
  },
  "files": [
    "./src/index.d.ts"
  ]
}
